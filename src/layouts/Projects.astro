---
import { type CollectionEntry } from 'astro:content';

type Props = {
  projects: CollectionEntry<'projects'>[];
};

const { projects } = Astro.props;
---

<div class="projects-container">
  {
    projects.map((project) => {
      const { featuredImage, title, summary, gitHubUrl } = project.data;
      return (
        <div class="project-card" data-aos="fade-up">
          <div class="project-grid">
            {featuredImage && (
              <div class="featured-image-container">
                <a href={`/project/${project.slug}`}>
                  <img
                    src={`/static/images/${featuredImage}`}
                    alt={`Featured image for ${title}`}
                  />
                </a>
              </div>
            )}
            <div class="project-content">
              <div class="project-header">
                <h2>{title}</h2>
                <p>{summary}</p>
              </div>
              <div class="project-links">
                {gitHubUrl && (
                  <a href={gitHubUrl} target="_blank" rel="noopener noreferrer" class="github-link">
                    <svg class="icon" fill="currentColor" viewBox="0 0 24 24">
                      <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    View on GitHub
                  </a>
                )}
                <a href={`/project/${project.slug}`} class="project-link">
                  ðŸ’¡ <span>Read More</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      );
    })
  }
</div>

<style>
  .projects-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-card {
    transition: transform 0.3s ease-in-out;
    position: relative;
    width: 100%;
  }

  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 1.5rem;
  }

  .featured-image-container {
    display: grid;
    width: 100%;
    height: auto;

    img {
      width: 100%;
      height: auto;
    }
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  .project-header {
    h2 {
      font-size: 1.875rem;
      font-weight: bold;
      color: var(--text-primary);
      margin-bottom: 1rem;
      margin-top: 0;
    }

    p {
      font-size: 1.125rem;
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
    }
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: flex-end;
  }

  .github-link,
  .project-link {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    transition: background-color 0.2s;
    text-decoration: none;

    &:hover {
      background-color: var(--primary-hover);
    }
  }

  .github-link {
    background-color: var(--dark-bg);
    color: white;

    &:hover {
      background-color: var(--dark-bg-hover);
    }
  }

  .project-link {
    background-color: var(--primary);
    color: white;
    font-weight: bold;

    span {
      margin-left: 0.5rem;
      text-decoration: underline;
    }
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-right: 0.5rem;
  }
</style>
