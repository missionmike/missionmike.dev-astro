---
import DarkModeToggle from './DarkModeToggle.astro';

const links = [
  {
    href: '/',
    text: 'Home',
  },
  {
    href: '/blog',
    text: 'Blog',
  },
  {
    href: '/about',
    text: 'Bio',
  },
];
---

<header class="header">
  <nav class="header-nav">
    <div class="nav-content">
      <ul class="header-nav-list">
        {
          links.map((link) => (
            <li>
              <a href={link.href}>{link.text}</a>
            </li>
          ))
        }
      </ul>
      <div class="theme-toggle-wrapper">
        <DarkModeToggle />
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    padding: 1rem 0;
    background-color: var(--color-header-bg);
    box-shadow: 0 2px 4px var(--color-shadow);
  }

  .header-nav {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header-nav-list a {
    color: var(--color-text);
    text-decoration: underline;
    font-weight: 500;
    transition: all 0.2s ease;
    padding: 0.5rem 1rem;
    border-radius: 4px;

    &:hover {
      color: var(--color-text-light);
      background-color: var(--color-code-bg);
    }
  }

  .theme-toggle-wrapper {
    display: flex;
    align-items: center;
    margin-left: auto;
    padding-left: 2rem;
  }

  @media (max-width: 768px) {
    .nav-content {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1rem;
      padding: 1rem 0;
    }

    .header-nav-list {
      order: 2;
      justify-content: center;
      width: 100%;
    }

    .theme-toggle-wrapper {
      order: 1;
      margin-left: auto;
      padding-left: 1rem;
    }
  }
</style>
