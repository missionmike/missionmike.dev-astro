---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['image-wrapper', className]}>
  <slot />
</div>

<style>
  .image-wrapper {
    position: relative;
    width: 100%;
    height: 400px;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
</style> 