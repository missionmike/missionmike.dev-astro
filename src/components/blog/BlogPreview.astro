---
type Post = {
  title: string;
  date: string;
  updated?: string;
  excerpt: string;
  path: string;
  tags?: string[];
  featuredImage?: string;
};

interface Props {
  post: Post;
}

const { post } = Astro.props;
const truncatedExcerpt =
  post.excerpt.length > 150 ? post.excerpt.slice(0, 150) + '...' : post.excerpt;
---

<div class="card h-100" data-aos="fade-up">
  {
    post.featuredImage && (
      <a href={post.path}>
        <div class="card-img-top aspect-ratio-16-9">
          <img
            src={`/static/images/${post.featuredImage}`}
            alt={post.title}
            class="w-100 h-100 object-fit-cover"
          />
        </div>
      </a>
    )
  }
  <div class="card-body">
    <h2 class="card-title h5">
      <a href={post.path}>{post.title}</a>
    </h2>
    <p class="card-text text-muted small d-flex justify-content-between">
      <span>
        Published
        {
          new Date(post.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })
        }
      </span>
      <span
        ><em>
          {
            post.updated && (
              <>
                Updated{' '}
                {new Date(post.updated).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </>
            )
          }
        </em>
      </span>
    </p>
    <p class="card-text">{truncatedExcerpt}</p>
    {
      post.tags && post.tags.length > 0 && (
        <div class="mt-2 tag-container">
          {post.tags.map((tag: string) => (
            <a href={`/blog/tag/${tag.toLowerCase()}`} class="tag-link">
              {tag}
            </a>
          ))}
        </div>
      )
    }
  </div>
</div>

<style>
  a {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .card {
    transition: transform 0.2s ease-in-out;
    opacity: 0;
    background-color: var(--color-header-bg);
    border: 1px solid var(--color-border);
  }

  [data-aos='fade-up'].aos-animate {
    opacity: 1;
  }

  a:hover .card {
    transform: translateY(-5px);
  }

  .card-title {
    color: var(--color-text);
  }

  a:hover .card-title {
    color: var(--color-text);
  }

  .card-img-top {
    overflow: hidden;
    position: relative;
  }

  .aspect-ratio-16-9 {
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio (9/16 = 0.5625) */
  }

  .aspect-ratio-16-9 img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-img-top img {
    transition: transform 0.3s ease-in-out;
  }

  a:hover .card-img-top img {
    transform: scale(1.05);
  }

  .tag-container {
    padding: 0;
    display: flex;
    flex-wrap: wrap;
  }
</style>
