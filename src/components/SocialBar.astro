---
const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/missionmike',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/michaeldinerstein/',
    icon: 'linkedin',
  },
];
---

<div class="social-bar">
  {
    socialLinks.map((link) => (
      <a href={link.url} target="_blank" rel="noopener noreferrer" class="social-link">
        <i class={`fab fa-${link.icon}`} />
        <span class="sr-only">{link.name}</span>
      </a>
    ))
  }
</div>

<style>
  .social-bar {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
  }

  .social-link {
    color: var(--color-text);
    font-size: 1.5rem;
    transition: color 0.2s ease;

    &:hover {
      color: var(--color-text-light);
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
